@{
    ViewData["Title"] = "Movie Entry";
}

@model Mission06_alexm99.Models.Movies

<h1>Fill Out Movie Information</h1>

<div>
    <form method="post">
        <div asp-validation-summary="All"></div>

        <label asp-for="CategoryID">Category</label>
        <select asp-for="CategoryID">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryID">@c.CategoryType</option>
            }
        </select>
        <br />

        <label asp-for="Title">Title:</label>
        <input asp-for="Title" /><br />

        <label asp-for="Year">Year:</label>
        <input asp-for="Year" /><br />

        <label asp-for="Director">Director:</label>
        <input asp-for="Director" /><br />

        <label asp-for="Rating">Rating:</label>
        @Html.DropDownListFor(m => m.Rating,
                                    new SelectList(Enum.GetValues(typeof(Rating))),
                                    "Select Movie Rating")
        <br />

        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />

        <label asp-for="Lent_To">Lent To:</label>
        <input asp-for="Lent_To" /><br />

        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" /><br />

        <button type="submit">Submit Movie</button>

    </form>
</div>