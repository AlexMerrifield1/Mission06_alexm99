@{
    ViewData["Title"] = "Movie List";
}

@model List<Movies>


<table class="table table-bordered table-hover">

    <thead class="font-weight-bold">
        <tr>
            @*Change this to be part of the CategoryID table*@
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Notes</td>
        </tr>
    </thead>

    <tbody>
        @*This will pull all the data from the Model i.e. <td>@x.Major.MajorName</td>
        *@
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Category</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.Lent_To</td>
                <td>@x.Notes</td>

                <td><a asp-controller="Home" asp-action="Edit" asp-route-applicationid="@x.MovieID">Edit</a></td>
                <td><a asp-controller="Home" asp-action="Delete" asp-route-applicationid="@x.MovieID">Delete</a></td>

            </tr>
        }
    </tbody>

</table>